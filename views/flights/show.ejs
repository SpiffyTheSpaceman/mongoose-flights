<%- include('../partials/header') %>

<section id="show-page">
    <div>Airline: </div>
    <div><%= flight.airline %></div>
    <div>Flight Number: </div>
    <div><%= flight.flightNo %></div>
    <div>Departure Date: </div>
    <div><%= flight.departs %></div>
    <div>Airport: </div>
    <div><%= flight.airport %></div>
</section>
  
  <br><br><h2>Airport Destinations</h2>
  <form id="add-destination-form" method="POST"
    action="/flights/<%= flight._id %>/destinations">
    <label>Airport Destination:</label>
    <select name="airport">
        <option value="AUS">Austin</option>
        <option value="DAL">Dallas</option>
        <option value="LAX">Los Angeles</option>
        <option value="SAN">San Diego</option>
        <option value="SEA">Seattle</option>
      </select>
      <label>Arrival Date</label>
      <input type="datetime" name="arrival">
    <input type="submit" value="Add Review">
  </form>
  
  <% if (flight.destinations.length) { %>
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Destination</th>
        </tr>
      </thead>
      <tbody>
        <% flight.destinations.forEach(function(destination) { %>
          <tr>
            <td><%= destination.arrival %></td>
            <td><%= destination.airport %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <h5>No Arrivals Specified Yet</h5>
  <% } %>


<%- include('../partials/footer') %>